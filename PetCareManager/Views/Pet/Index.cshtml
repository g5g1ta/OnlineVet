@model IEnumerable<PetCareManager.Models.Pet>

@{
    ViewData["Title"] = "My Pets";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>My Pets</h2>

<a asp-action="Create" class="btn btn-success">Add New Pet</a>

<table class="table mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Breed</th>
            <th>Gender</th>
            <th>Date of Birth</th>
            <th>Medical History</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var pet in Model)
        {
            <tr>
                <td>@pet.Name</td>
                <td>@pet.Breed</td>
                <td>@pet.Gender</td>              
                <td>@pet.DateOfBirth.ToShortDateString()</td>
                <td>@pet.MedicalHistory</td>
                <td>
                    <a href="@Url.Action("Edit", "Pet", new { id = pet.PetId })" class="btn btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Pet", new { id = pet.PetId })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
