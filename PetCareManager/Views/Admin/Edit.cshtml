@model PetCareManager.Models.VetSchedule

<h2>Edit Availability for @Model.Vet.UserName</h2>

<form method="post">
    <input type="hidden" name="VetId" value="@Model.VetId" />

    <div class="form-group">
        <label>Available From:</label>
        <input type="time" name="AvailableFrom" class="form-control" value="@Model.AvailableFrom.ToString("hh\\:mm")" required />
    </div>

    <div class="form-group">
        <label>Available To:</label>
        <input type="time" name="AvailableTo" class="form-control" value="@Model.AvailableTo.ToString("hh\\:mm")" required />
    </div>

    <div class="form-group">
        <label>Is Available:</label>
        <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>