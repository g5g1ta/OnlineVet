@model PetCareManager.ViewModels.ScheduleViewModel

@{
    ViewData["Title"] = "Add Schedule for Vet";
}

<h1>Add Schedule for Vet</h1>

<form asp-action="AddSchedule" method="post">
    <input type="hidden" name="vetId" value="@Model.VetId" />
    <div class="form-group">
        <label for="AvailableFrom">Available From:</label>
        <input type="time" asp-for="AvailableFrom" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="AvailableTo">Available To:</label>
        <input type="time" asp-for="AvailableTo" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="IsAvailable">Is Available:</label>
        <input type="checkbox" asp-for="IsAvailable" class="form-check-input" />
    </div>

    <button type="submit" class="btn btn-primary">Add Schedule</button>
</form>

<a href="@Url.Action("AllVets", "YourController")">Back to Vet List</a>
