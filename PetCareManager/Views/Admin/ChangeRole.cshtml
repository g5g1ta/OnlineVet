@model PetCareManager.ViewModels.UserViewModel

<h2>Edit Pet</h2>

<form asp-action="ChangeRole" method="post" asp-route-id="@Model.UserId">

    <input type="hidden" asp-for="UserId"/>
    <div class="form-group">
        <label for="Email">Email</label>
        <input type="text" id="Email" name="Email" class="form-control" value="@Model.Email" required />
    </div>

    <div class="form-group">
        <label for="Username">Username</label>
        <input type="text" id="Username" name="Username" class="form-control" value="@Model.Username" required />
    </div>

     <div class="form-group"></div>
        <label for="Role">Role</label>
        <input type="text" id="Role" name="Role" class="form-control" value="@Model.Role" required />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a href="@Url.Action("Index", "Pet")" class="btn btn-secondary">Cancel</a>
</form>