@{
    ViewData["Title"] = "Create Appointment";
}

<div class="container mt-5" style="max-width: 600px;">
    <h2 class="text-center text-secondary mb-4">Make an Appointment</h2>

    <form asp-action="Create" method="post" class="shadow-sm p-4 rounded bg-white border">
        <input type="hidden" name="vetId" value="@ViewBag.VetId" />

        <div class="form-group mb-3">
            <label for="appointmentDate" class="form-label">Date and Time</label>
            <input type="datetime-local" class="form-control" name="appointmentDate" required />
        </div>

        <div class="form-group mb-4">
            <label for="petId" class="form-label">Select Your Pet</label>
            <select name="petId" class="form-select" required>
                @foreach (var pet in (List<PetCareManager.Models.Pet>)ViewBag.Pets)
                {
                    <option value="@pet.PetId">@pet.Name</option>
                }
            </select>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">Confirm Appointment</button>
        </div>
    </form>
</div>
