@{
    ViewData["Title"] = "Home";

    var roles = ViewData["Roles"] as IList<string> ?? new List<string>();

    var username = User.Identity?.Name ?? "Guest";
    var email = ViewData["Email"] as string ?? "No email";
}
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f0f4f8;
        padding: 40px;
    }

    .home-box {
        max-width: 400px;
        margin: 0 auto;
        background: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    h2 {
        text-align: center;
    }

    .info {
        margin-top: 20px;
    }
</style>

<div class="home-box">
    <h2>Welcome</h2>
    <div class="info">
        <p><strong>Username:</strong> @username</p>
        <p><strong>Email:</strong> @email</p>
        <p><strong>Role:</strong> @roles.FirstOrDefault()</p>
    </div>
    <form method="post" action="/Account/Logout">
        <button type="submit" class="logout-btn">Logout</button>
    </form>
</div>
