@model PetCareManager.Models.User
@{

}
<style>
    body {
        background-color: #f0f8ff;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        padding-top: 100px;
    }

    h1 {
        color: #2c3e50;
    }

    .btn {
        min-width: 150px;
    }
</style>

<div class="container text-center mt-5">
    <h1 class="display-4 mb-4">Welcome to OnlineVet</h1>

    <div class="btn-group" role="group" aria-label="Home actions">
        <a asp-controller="Pet" asp-action="Index" class="btn btn-primary btn-lg me-3">Add Pet</a>
        <a asp-controller="Vets" asp-action="Index" class="btn btn-secondary btn-lg">View Vets</a>
        <a asp-controller="Appointments" asp-action="UserAppointments" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">View Vets</a>
    </div>
</div>
