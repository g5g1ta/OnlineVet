@{
    ViewData["Title"] = "Home";
    var roles = ViewData["Roles"] as IList<string> ?? new List<string>();
    var username = User.Identity?.Name ?? "Guest";
    var email = ViewData["Email"] as string ?? "No email";
}

<style>
    body {
        background: linear-gradient(to right, #dbeafe, #f0f8ff);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .dashboard-card {
        background-color: white;
        border-radius: 12px;
        padding: 40px 30px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
    }

    .dashboard-card h1 {
        color: #0d6efd;
        font-size: 2.5rem;
        font-weight: bold;
    }

    .dashboard-card p {
        color: #555;
        margin-bottom: 30px;
    }

    .btn-lg {
        padding: 15px 30px;
        font-size: 1.2rem;
        border-radius: 8px;
    }

    .btn-primary {
        background-color: #0d6efd;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }

    
</style>


<div class="container d-flex justify-content-center align-items-center" style="min-height: 90vh;">
    <div class="dashboard-card text-center">
        <h1>Welcome, @username!</h1>
        <p class="lead">Manage your pets or consult with our professional vets anytime.</p>

        <div class="btn-group" role="group" aria-label="Home actions">
            <a asp-controller="Pet" asp-action="Index" class="btn btn-primary btn-lg me-3">➕ Add Pet</a>
            <a asp-controller="Vets" asp-action="Index" class="btn btn-secondary btn-lg">👨‍⚕️ View Vets</a>
        </div>
    </div>
</div>
